<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="109dp"
                android:layout_height="97dp"
                android:layout_marginTop="116dp"
                android:src="@drawable/dp_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/profile_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/user"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/profile_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/profile_user"
                app:layout_constraintStart_toStartOf="@+id/profile_user"
                app:layout_constraintTop_toBottomOf="@+id/profile_user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_email">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/privacy_icon"
                    android:drawablePadding="20dp"
                    android:text="@string/privacy_policy"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/DarkGreen"
                    android:textAlignment="viewStart" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="65dp"
                    android:background="@color/DarkGreen" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/feedback_icon"
                    android:drawablePadding="20dp"
                    android:textColor="@color/DarkGreen"
                    android:text="@string/feedback"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="viewStart" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="65dp"
                    android:background="@color/DarkGreen" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/about_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:textColor="@color/DarkGreen"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/about_icon"
                    android:drawablePadding="20dp"
                    android:text="@string/about_us"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="viewStart" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="65dp"
                    android:background="@color/DarkGreen" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/log_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:textColor="@color/DarkGreen"
                    android:paddingStart="14dp"
                    android:paddingEnd="10dp"
                    android:drawableStart="@drawable/logout_icon"
                    android:drawablePadding="20dp"
                    android:text="@string/log_out"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="viewStart" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>